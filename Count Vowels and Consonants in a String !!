#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[1001];
    int vowels = 0, consonants = 0;

    // Read the full input line (including spaces)
    fgets(str, sizeof(str), stdin);

    // Loop through each character
    for (int i = 0; i < strlen(str); i++) {
        char ch = tolower(str[i]);  // convert to lowercase for uniform comparison

        if (isalpha(ch)) {  // check if it's an alphabet
            if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u')
                vowels++;
            else
                consonants++;
        }
    }

    // Print the results
    printf("%d %d", vowels, consonants);

    return 0;
}
