#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char str[1001];
    int count = 0;

    // Read the input string (including spaces)
    fgets(str, sizeof(str), stdin);

    // Traverse the string and count vowels
    for (int i = 0; i < strlen(str); i++) {
        char ch = tolower(str[i]);
        if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u') {
            count++;
        }
    }

    // Print the total number of vowels
    printf("%d", count);

    return 0;
}
