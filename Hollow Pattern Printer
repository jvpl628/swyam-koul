#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

#include <stdio.h>

int main() {
    int N, M;
    scanf("%d %d", &N, &M);  // Input number of rows and columns

    for (int i = 0; i < N; i++) {        // Loop through rows
        for (int j = 0; j < M; j++) {    // Loop through columns
            // Print '*' for first/last row or first/last column
            if (i == 0 || i == N - 1 || j == 0 || j == M - 1)
                printf("* ");
            else
                printf("  ");  // Print spaces inside
        }
        printf("\n");          // Move to next line
    }

    return 0;
}
