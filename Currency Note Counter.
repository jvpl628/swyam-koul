#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>int main() {
int main() {
    int amount;
    scanf("%d", &amount);

    int denominations[] = {500, 100, 50, 20, 10, 5, 2, 1};
    int count[8] = {0};

    for (int i = 0; i < 8; i++) {
        count[i] = amount / denominations[i];
        amount %= denominations[i];
    }

    for (int i = 0; i < 8; i++) {
        if (count[i] > 0) {
            printf("%d: %d\n", denominations[i], count[i]);
        }
    }

    return 0;
}
