#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
#include <stdio.h>

#include <string.h>

#include <ctype.h>

int main() {

    char str[1001];

    int uppercase = 0, lowercase = 0;
    fgets(str, sizeof(str), stdin);

    // Traverse the string

    for (int i = 0; i < strlen(str); i++) {

        if (isupper(str[i]))

            uppercase++;

        else if (islower(str[i]))

            lowercase++;

    }
    printf("%d %d", uppercase, lowercase);

    return 0;

}
