#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);  // Input number of rows

    for (int i = 1; i <= N; i++) {      // Loop through rows
        for (int j = 1; j <= i; j++) {  // Print stars up to the current row number
            printf("* ");
        }
        printf("\n");  // Move to next line
    }

    return 0;
}
