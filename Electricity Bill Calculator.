#include <stdio.h>int main() {
   #include <stdio.h>

int main() {
    int units;
    float bill = 0.0, total;

    // Read input
    scanf("%d", &units);

    // Calculate bill based on slabs
    if (units <= 50) {
        bill = units * 0.50;
    } 
    else if (units <= 150) {
        bill = 50 * 0.50 + (units - 50) * 0.75;
    } 
    else if (units <= 250) {
        bill = 50 * 0.50 + 100 * 0.75 + (units - 150) * 1.20;
    } 
    else {
        bill = 50 * 0.50 + 100 * 0.75 + 100 * 1.20 + (units - 250) * 1.50;
    }

    // Add 20% surcharge
    total = bill + (bill * 0.20);

    // Print total bill (up to 2 decimal places)
    printf("%.2f\n", total);

    return 0;
}
